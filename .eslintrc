{
  "env": {
    "node": true
  },
  "rules": {
    // Possible Errors
    "no-extra-parens": 2,

    // Best Practices
    "block-scoped-var": 2,
    "complexity": [2, 10],
    "default-case": 2,
    "guard-for-in": 2,
    "no-else-return": 2,
    "no-eq-null": 2,
    "no-floating-decimal": 2,
    "no-self-compare": 2,
    "no-void": 2,
    "wrap-iife": [2, "inside"],

    // Variables
    "no-undefined": 2,
    "no-use-before-define": [2, "nofunc"],

    // Stylistic Issues
    "brace-style": [2, "1tbs", { "allowSingleLine": true }],
    "no-lonely-if": 2,
    "space-after-keywords": [2, "always"],
    "space-in-brackets": [2, "never"],
    "space-in-parens": [2, "never"],
    "space-unary-word-ops": 2
  }
}
